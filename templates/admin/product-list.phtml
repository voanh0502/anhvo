function sortable_html($field, $label, $sort)
{
    $link = url('/admin/products?');
    $class = [];

    $link .= 'sort=' . $field . ',';
    if (!is_null($sort)) {
        [$sortBy, $sortOrder] = $sort;

        if ($sort[0] === $field) {
            $class[] = 'sort-' . $sortOrder;
            if ($sortOrder === 'asc') $link .= 'desc';
            else $link .= 'asc';
        } else
            $link .= 'asc';
    } else $link .= 'asc';
    ob_start(); ?>
    <a href="<?= $link ?>" class="<?= implode(' ', $class) ?>"><?= $label ?></a>
    <?php

    return ob_get_clean();
}

